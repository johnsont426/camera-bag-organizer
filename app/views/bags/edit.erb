<h1>Edit Your Bag</h1>
<h2>Bag Type: <%= @bag.bag_type %></h2>
<form action="/bags/<%= @bag.id %>" method="post">
	<input type="hidden" name="_method" value="patch">
	
	<h2>Cameras:</h2>
	<% Camera.all.each do |camera| %>
		<label><%= camera.name %>(<%= camera.weight %>g)</label>
		<input type="checkbox" name="camera_ids[]" value="<%= camera.id %>" <%= 'checked' if @bag.camera_ids.include?(camera.id)%>>
		<br>
	<% end %>
	<h3><a href="/cameras/new">create new camera</a></h3>
	<br><br>

	<h2>Lenses:</h2>
	<% Lens.all.each do |lens| %>
		<label><%= lens.name %>(<%= lens.weight %>g)</label>
		<input type="checkbox" name="lens_ids[]" value="<%= lens.id %>" <%= 'checked' if @bag.lens_ids.include?(lens.id)%>>
		<br>
	<% end %>
	<h3><a href="/lenses/new">create new lens</a></h3>
	<br><br>
	<input type="submit" value="update bag">
</form>
