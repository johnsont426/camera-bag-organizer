<h1>Add a new camera bag</h1>
<form action="/bags" method="post">

	<label>Bag Type:</label>
	<input type="text" name="bag_type">
	<br><br>

	<h2>Cameras:</h2>
	<% Camera.all.each do |camera| %>
		<label><a href= "/cameras/<%= camera.id %>"><%= camera.name %></a></label>
		<input type="checkbox" name="camera_ids[]" value="<%= camera.id %>">
		<br>
	<% end %>

	<h4><a href="/cameras/new">create new camera</a></h4>	
	<br><br>

	<h2>Lenses:</h2>
	<% Lens.all.each do |lens| %>
		<label><a href="/lenses/<%= lens.id %>"><%= lens.name %></a></label>
		<input type="checkbox" name="lens_ids[]" value="<%= lens.id %>">
		<br>
	<% end %>

	<h4><a href="/lenses/new">create new lens</a></h4>
	<br><br><br>
	
	<input type="submit" value="create bag">

</form>
